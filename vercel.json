{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm run install:all",
  "framework": "vite",
  "functions": {
    "server/**": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
